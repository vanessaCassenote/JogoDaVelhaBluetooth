<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Jogo">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a"
        android:layout_marginTop="178dp"
        android:layout_marginStart="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b"
        android:layout_alignTop="@+id/a"
        android:layout_toEndOf="@+id/a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c"
        android:layout_alignBottom="@+id/b"
        android:layout_toEndOf="@+id/b" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d"
        android:layout_below="@+id/a"
        android:layout_alignStart="@+id/a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e"
        android:layout_alignBottom="@+id/d"
        android:layout_toEndOf="@+id/d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f"
        android:layout_alignBottom="@+id/e"
        android:layout_toEndOf="@+id/e" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g"
        android:layout_below="@+id/d"
        android:layout_alignStart="@+id/d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h"
        android:layout_alignBottom="@+id/g"
        android:layout_toEndOf="@+id/g" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i"
        android:layout_below="@+id/f"
        android:layout_alignStart="@+id/f" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Jogadores"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/a"
        android:layout_marginTop="44dp"
        android:layout_alignEnd="@+id/c"
        android:gravity="center_horizontal" />
</RelativeLayout>
